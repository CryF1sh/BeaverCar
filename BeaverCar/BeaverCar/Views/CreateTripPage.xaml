<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeaverCar.Views.CreateTripPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">

            <Label Text="Новая" FontSize="Large" x:Name="entrStatus"/> 

            <Label Text="Дата поездки: " FontSize="Large" />
            <Entry Text="{Binding Data}" FontSize="Medium" FontAttributes="Bold" x:Name="entrDate"/>

            <Label Text="Цена:" FontSize="Large" />
            <Entry Text="{Binding Price}" FontSize="Medium" FontAttributes="Bold" x:Name="entrPrice"/>

            <Label Text="Точка отправки:" FontSize="Large" />
            <Entry FontSize="Medium" FontAttributes="Bold" x:Name="entrStart"/>

            <Label Text="Точка прибытия:" FontSize="Large" />
            <Entry FontSize="Medium" FontAttributes="Bold" x:Name="entrEnd"/>

            <Label Text="Количество мест:" FontSize="Large" />
            <Entry Text="{Binding CountPlace}" FontSize="Medium" FontAttributes="Bold" x:Name="entrCount"/>

            <Label Text="Создатель:" FontSize="Large" />
            <Entry Text="{Binding CreaterID}" FontSize="Medium" FontAttributes="Bold" x:Name="entrCreator"/>

            <Button Text="Создать поездку"  x:Name="BtnCreateTrip" Clicked="BtnCreateTrip_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>