<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeaverCar.Views.UserTypeSelectionPage">
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Водитель" x:Name="btnDriver" HeightRequest="150" WidthRequest="150" Margin="15" Clicked="btnDriver_Clicked"/>
            <Button Text="Пассажир" x:Name="btnPass" HeightRequest="150" WidthRequest="150" Margin="15" Clicked="btnPass_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>